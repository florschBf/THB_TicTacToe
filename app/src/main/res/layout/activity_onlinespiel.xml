<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    tools:context=".OnlinespielActivity">

    <TextView
        android:id="@+id/listStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_dark_background"
        android:fontFamily="@font/facon"
        android:padding="5pt"
        android:rotationX="0"
        android:text="Tap here to open Playerlist again"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="@dimen/size_play_board"
        android:layout_height="@dimen/size_play_board"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/play_board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/block0"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"

                />

            <ImageView
                android:id="@+id/block1"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:layout_marginLeft="10dp"

                />

            <ImageView
                android:id="@+id/block2"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:layout_marginLeft="10dp"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/block3"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:layout_marginTop="5dp"

                />

            <ImageView
                android:id="@+id/block4"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:layout_marginLeft="10dp"

                />

            <ImageView
                android:id="@+id/block5"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:layout_marginLeft="10dp"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/block6"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"

                />

            <ImageView
                android:id="@+id/block7"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:layout_margin="3dp"

                />

            <ImageView
                android:id="@+id/block8"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"

                />
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/restartGame"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/restart_btn"
        android:onClick="restartGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.55"        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#99000000"
        android:clickable="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/selectOpponentMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_dark_background"
            android:fontFamily="@font/facon"
            android:padding="5pt"
            android:rotationX="0"
            android:text="Select an Opponent"
            android:textAlignment="center"
            android:textColor="@color/teal_200"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/closeList"
            android:layout_width="@dimen/width_menu_btn"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_press_white"
            android:fontFamily="@font/facon"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Liste schlieÃŸen"
            android:textAllCaps="true"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/textSize_menu_btn"
            app:layout_constraintTop_toBottomOf="@+id/selectOpponentMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ListView
            android:id="@+id/playerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/closeList" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>