<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    tools:context=".GameActivity">

    <TableLayout
        android:layout_width="@dimen/size_play_board"
        android:layout_height="@dimen/size_play_board"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/play_board"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            >

            <ImageView
                android:id="@+id/row1_col1"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/row1_col2"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/row1_col3"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp" >

            <ImageView
                android:id="@+id/row2_col1"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/row2_col2"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/row2_col3"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/row3_col1"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/row3_col2"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/row3_col3"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_cross_zero_image"
                android:layout_height="@dimen/size_cross_zero_image"
                android:onClick="GameBoardClick"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/zahnrad_pcgame"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:srcCompat="@drawable/zahnrad1" />


</androidx.constraintlayout.widget.ConstraintLayout>